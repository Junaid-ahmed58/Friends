<p style="color: green"><%= notice %></p>

<h1>Friends List</h1>

<table class="table table-striped table-bordered table-hover" >
  <thead class="table-dark">
    <tr>
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Instagram</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @friends.each do |friend|%>
      <tr>
       <td><%= friend.first_name %></td>
       <td><%= friend.last_name %></td>
       <td><%= friend.email %></td>
       <td><%= friend.phone %></td>
       <td><%= friend.instagram %></td>
       <td>
        <%= link_to "Edit", edit_friend_path(friend), class:"btn btn-secondary" %>
        <%= link_to "Show", friend_path(friend), class:"btn btn-secondary" %>
        <%= link_to "Destroy", friend_path(friend), data: { "turbo-method": :delete }, class:"btn btn-secondary" %>
       </td>
      </tr>
    <% end %>
  </tbody>
</table>
